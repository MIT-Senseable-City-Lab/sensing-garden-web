aws_region = "us-east-1"
app_name = "sensing-garden-web"
ecr_repository_name = "sensing-garden-web"
image_tag = "latest"
port = 5052
sensing_garden_api_key = "your-api-key-here"  # Replace with actual API key; consider using AWS Secrets Manager
api_base_url = "https://api.example.com"      # Replace with your actual API base URL

# Optional configurations
instance_configuration = {
  cpu    = "1 vCPU"
  memory = "2 GB"
}
auto_deployments_enabled = true

tags = {
  Environment = "production"
  Project     = "sensing-garden"
  ManagedBy   = "terraform"
}
